{
  "name": "sinon-mocha",
  "version": "1.0.1",
  "description": "Automatically verify and clean sinon sandboxes after each test",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 70,
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "sinon",
    "mocha",
    "cleanup",
    "afterEach",
    "verify",
    "restore",
    "restoreAndVerify"
  ],
  "author": "Damian Kaczmarek <rush@tenfold.com>",
  "license": "MIT",
  "dependencies": {
    "mocha-finalize-each": "^1.0.2"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "coveralls": "^3.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^5.1.1"
  }
}
